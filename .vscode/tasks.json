

{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "g++ build main",
        "command": "/usr/bin/g++",
        "args": [
          "-g",
          "${workspaceFolder}/src/*.cpp",
          "-o",
          "${workspaceFolder}/bin/main",
        ],
        "options": {
          "cwd": "/usr/bin"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "type": "shell",
        "label": "g++ test suite",
        "command": "/usr/bin/g++",
        "args": [
          "-g",
          "${workspaceFolder}/src/board.cpp",
          "${workspaceFolder}/src/game.cpp",
          "${workspaceFolder}/src/piece.cpp",
          "${workspaceFolder}/src/util.cpp",
          "${workspaceFolder}/src/move.cpp",
          "${workspaceFolder}/src/user_input.cpp",
          "${workspaceFolder}/test/*.cpp",
          "-o",
          "${workspaceFolder}/bin/test"
        ],
        "options": {
          "cwd": "/usr/bin"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "test",
          "isDefault": true
        }
      }
    ]
  }